<h1>新規登録</h1>
<div><%= flash[:alert] %></div>

<!--Userのインスタンス@userに紐づけ。インスタンスの中身の有無によってcreateかupdateか自動振り分け-->
<%= form_with(model: @user, local: true) do |form| %>
    <!--エラー発生時、メッセージ出力-->
    <div><%= render "layouts/error_messages", object: @user %></div>

    <div>
        <%= form.label :name, "名前", style: "display: block" %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :password, "パスワード", style: "display: block" %>
        <%= form.password_field :password %>
    </div>
    <div>
        <%= form.label :password_confirmation, "確認用パスワード", style: "display: block" %>
        <%= form.password_field :password_confirmation %>
    </div>
    <div>
        <%= form.submit "登録" %>
        <!--インスタンスが空ならcreateへ、そうでなければupdateへ-->
    </div>
<% end %>
