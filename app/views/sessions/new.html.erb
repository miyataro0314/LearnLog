<!--ログインページ-->
<h1>ログイン</h1>
<div><%= flash[:alert] %></div>

<%= form_with url: login_path do |form| %>
    <div>
        <%= form.label :name, "名前", style: "display: block" %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label :password, "パスワード", style: "display: block" %>
        <%= form.password_field :password %>
    </div>
    <div>
        <%= form.submit "ログイン" %>
    </div>

<% end %>